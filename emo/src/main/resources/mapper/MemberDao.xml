<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.dadaepo.emo.dao.MemberDao">
    <insert id="insertMember" parameterType="com.dadaepo.emo.dto.Member">
        INSERT INTO member(
            user_id
        , nickname
        , name
        , password
        , email
        , role
        )
        Values(
            #{userId}
        , #{nickname}
        , #{name}
        , #{password}
        , #{email}
        , #{role}
        )
    </insert>
    <select id="selectUserAuthOneByUserId" resultType="String" >
        SELECT role
        FROM member
        WHERE user_id = #{userId}
    </select>
    <select id="selectUserByUserId" resultType="com.dadaepo.emo.dto.Member">
        SELECT *
        FROM member
        WHERE user_id = #{userId}
    </select>
</mapper>
